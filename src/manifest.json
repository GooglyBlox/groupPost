{
  "manifest_version": 2,
  "name": "groupPost",
  "description": "Streamline your social media sharing with groupPost! This extension enables you to instantly send posts from Twitter and Instagram directly to Discord via webhooks.",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "clipboardRead", "clipboardWrite"],
  "icons": {
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["*://twitter.com/*", "*://www.instagram.com/*"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "images/icon48.png"
    }
  }
}
